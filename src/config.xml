<?xml version='1.0' encoding='utf-8'?>
<widget id="Lettuce" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Lettuce</name>
    <description>
        Lettuce Frontend
    </description>
    <author email="ben@noreply.nope" href="https://localhost/lettuce">
        Ben Blazely
    </author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="phonegap-version" value="3.4.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-installLocation" value="auto" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />
    <gap:plugin name="de.appplant.cordova.plugin.local-notification" />
    <gap:plugin name="nl.x-services.plugins.launchmyapp">
        <param name="URL_SCHEME" value="lettuce" />
    </gap:plugin>

    <icon src="icon.png" />
    <icon gap:platform="android" gap:qualifier="ldpi" src="assets/img/icon/android/icon-36-ldpi.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="assets/img/icon/android/icon-48-mdpi.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="assets/img/icon/android/icon-72-hdpi.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="assets/img/icon/android/icon-96-xhdpi.png" />
    <icon gap:platform="blackberry" src="assets/img/icon/blackberry/icon-80.png" />
    <icon gap:platform="blackberry" gap:state="hover" src="assets/img/icon/blackberry/icon-80.png" />
    <icon gap:platform="ios" height="57" src="assets/img/icon/ios/icon-57.png" width="57" />
    <icon gap:platform="ios" height="72" src="assets/img/icon/ios/icon-72.png" width="72" />
    <icon gap:platform="ios" height="114" src="assets/img/icon/ios/icon-57-2x.png" width="114" />
    <icon gap:platform="ios" height="144" src="assets/img/icon/ios/icon-72-2x.png" width="144" />
    <icon gap:platform="webos" src="assets/img/icon/webos/icon-64.png" />
    <icon gap:platform="winphone" src="assets/img/icon/windows-phone/icon-48.png" />
    <icon gap:platform="winphone" gap:role="background" src="assets/img/bg/IMG_4905.jpg" />
    <gap:splash gap:platform="android" gap:qualifier="port-ldpi" src="assets/img/screen/android/screen-ldpi-portrait.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-mdpi" src="assets/img/screen/android/screen-mdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-hdpi" src="assets/img/screen/android/screen-hdpi-portrait.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-xhdpi" src="assets/img/screen/android/screen-xhdpi-portrait.png" />
    <gap:splash gap:platform="blackberry" src="assets/img/screen/blackberry/screen-225.png" />
    <gap:splash gap:platform="ios" height="480" src="assets/img/screen/ios/screen-iphone-portrait.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="assets/img/screen/ios/screen-iphone-portrait-2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1136" src="assets/img/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1024" src="assets/img/screen/ios/screen-ipad-portrait.png" width="768" />
    <gap:splash gap:platform="ios" height="768" src="assets/img/screen/ios/screen-ipad-landscape.png" width="1024" />
    <gap:splash gap:platform="winphone" src="assets/img/screen/windows-phone/screen-portrait.jpg" />
    <access origin="*" />
</widget>
